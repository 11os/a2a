{
  "name": "@j2a/j2a",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/11os/j2a",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev:dart": "cd packages/json2dart && yarn dev",
    "dev:ts": "cd packages/json2ts && yarn dev",
    "dev:j2a": "cd packages/j2a && yarn dev",
    "build:dart": "cd packages/json2dart && yarn build",
    "build:ts": "cd packages/json2ts && yarn build",
    "build:j2a": "cd packages/j2a && yarn build",
    "deploy:dart": "cd packages/json2dart && yarn deploy:surge",
    "deploy:ts": "cd packages/json2ts && yarn deploy:surge"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}
