{
  "packages": ["packages/j2a", "packages/cli"],
  "version": "1.0.6",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publishConfig": {
      "access": "public"
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
